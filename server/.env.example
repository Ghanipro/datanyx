# MongoDB Connection String
MONGO_URI=mongodb+srv://admin:admin@cluster0.pezspbi.mongodb.net/?appName=Cluster0

# Server Port
PORT=5000

# Encryption Configuration
# Generate a 32-byte (64 hex character) encryption key
# Command to generate: openssl rand -hex 32
# DO NOT share or commit this key to version control!
# Store in Azure Key Vault or AWS Secrets Manager in production
ENCRYPTION_KEY=your_32_byte_hex_encrypted_key_here

# Database Encryption
# Set to true to enable encryption for all asset documents
ENABLE_DOCUMENT_ENCRYPTION=true

# Data Classification Level
# Options: public, confidential, restricted
DATA_CLASSIFICATION=confidential

# Encryption Key Rotation
# Rotate keys every X days (0 = disabled)
KEY_ROTATION_DAYS=90

# Audit Logging
# Enable encryption audit logs
ENABLE_ENCRYPTION_AUDIT=true
AUDIT_LOG_PATH=./logs/encryption-audit.log
